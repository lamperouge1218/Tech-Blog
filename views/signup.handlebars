<div class="row justify-content-center">

  <form class="col-lg-8 bg-dark p-3 rounded-sm">
    <div class="form-group justify-content-center">
      <p class="text-light justify-content-center">Create a New Account</p>
      <label
        for="username-signup"
        class="text-light"
        id="username-signup"
      >Username</label>
      <input type="text" class="form-control" />
      <label for="email-signup" class="text-light">Email address</label>
      <input
        type="email"
        class="form-control"
        id="email-signup"
        aria-describedby="emailHelp"
      />
      <small id="emailHelp" class="form-text text-muted">We'll never share your
        email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1" class="text-light">Password</label>
      <input type="password" class="form-control" id="password-signup" />
    </div>
    <button type="submit" class="btn btn-primary mr-3">Submit</button>
    <a href="/login" class="text-info">Login Instead</a>
  </form>

</div>